#!/bin/sh

set -x

cd inst/symengine

# Install to `inst`
# Do not build with tests
# Do not build with benchmarks
cmake                                  \
    -DCMAKE_INSTALL_PREFIX:PATH=".."   \
    -DWITH_SYMENGINE_ASSERT=ON         \
    -DWITH_MPFR=ON                     \
    -DWITH_MPC=ON                      \
    -DWITH_OPENMP=ON                   \
    -DCMAKE_BUILD_TYPE=Debug           \
    -DWITH_BFD=yes                     \
    -DBUILD_TESTS:BOOL=OFF             \
    -DBUILD_BENCHMARKS:BOOL=OFF        \
    .


make

make install

set +x
