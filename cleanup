#!/usr/bin/env bash

set -x

# Remove installed files
cd inst
rm -r include
rm -r lib
rm -r lib64
cd ..


# Run `make clean` in symengine source
cd inst/symengine
if [[ $MAKE ]]; then
    $MAKE clean
else
    make clean
fi


# Clean up some files generated by CMake (__NOT all__)
rm -r CMakeFiles
rm    cmake_install.cmake

rm -r symengine/CMakeFiles
rm    symengine/cmake_install.cmake

rm -r symengine/utilities/teuchos/CMakeFiles
rm    symengine/utilities/teuchos/cmake_install.cmake

rm CMakeCache.txt
